<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>DynaDocs</RootNamespace>
        <AssemblyName>dydo</AssemblyName>
        <Version>1.0.0</Version>
        <Description>DynaDocs - Dynamic Documentation validation and management tool</Description>

        <!-- .NET Tool configuration -->
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>dydo</ToolCommandName>
        <PackageId>DynaDocs</PackageId>

        <!-- Suppress warning about prerelease dependency (System.CommandLine is beta but recommended) -->
        <NoWarn>$(NoWarn);NU5104</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
        <PackageReference Include="Markdig" Version="0.34.0" />
        <PackageReference Include="YamlDotNet" Version="15.1.0" />
        <PackageReference Include="System.Management" Version="8.0.0" Condition="$([MSBuild]::IsOSPlatform('Windows'))" />
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="DynaDocs.Tests\**" />
        <Content Remove="DynaDocs.Tests\**" />
        <EmbeddedResource Remove="DynaDocs.Tests\**" />
        <None Remove="DynaDocs.Tests\**" />
    </ItemGroup>

</Project>
